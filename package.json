{
  "name": "squadfinder",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": ["client", "server", "packages/*"],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:client": "bun run --filter client dev",
    "dev:server": "bun run --filter server dev",
    "build": "bun run --filter '*' build",
    "build:client": "bun run --filter client build",
    "build:server": "bun run --filter server build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "bun run --filter '*' typecheck",
    "db:generate": "bun run --filter server db:generate",
    "db:migrate": "bun run --filter server db:migrate",
    "db:push": "bun run --filter server db:push",
    "db:studio": "bun run --filter server db:studio",
    "db:seed": "bun run --filter server db:seed"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "bun": ">=1.1.0"
  }
}
