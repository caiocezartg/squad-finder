{
  "name": "squadfinder",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "bun@1.3.8",
  "workspaces": [
    "client",
    "server",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:client": "turbo dev --filter=client",
    "dev:server": "turbo dev --filter=server",
    "build": "turbo build",
    "build:client": "turbo build --filter=client",
    "build:server": "turbo build --filter=server",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json}\"",
    "db:generate": "turbo db:generate --filter=server",
    "db:migrate": "turbo db:migrate --filter=server",
    "db:push": "turbo db:push --filter=server",
    "db:studio": "turbo db:studio --filter=server",
    "db:seed": "turbo db:seed --filter=server"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.3.0",
    "turbo": "2.8.3",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "bun": ">=1.1.0"
  }
}
