{
  "name": "server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --env-file=../.env --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "start": "bun dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/infrastructure/database/seed/games.seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/helmet": "^12.0.0",
    "@fastify/swagger": "9.7.0",
    "@fastify/websocket": "^11.0.0",
    "@scalar/fastify-api-reference": "1.44.15",
    "@squadfinder/schemas": "workspace:*",
    "@squadfinder/types": "workspace:*",
    "better-auth": "^1.0.0",
    "drizzle-orm": "^0.35.0",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "fastify-type-provider-zod": "6.1.0",
    "pg": "^8.13.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@squadfinder/typescript-config": "workspace:*",
    "@types/pg": "^8.11.0",
    "bun-types": "^1.1.0",
    "drizzle-kit": "^0.26.0",
    "pino-pretty": "13.1.3",
    "typescript": "^5.6.0"
  }
}
